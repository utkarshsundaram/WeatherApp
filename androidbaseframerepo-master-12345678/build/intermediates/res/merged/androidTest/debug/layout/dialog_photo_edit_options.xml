<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_40" >

    <LinearLayout
        android:id="@+id/linear_dialog_visible_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/common_grey_3"
        android:orientation="vertical"
        android:padding="@dimen/photo_options_button_padding" >

        <Button
            android:id="@+id/btn_photo_option_take_new_photo"
            style="@style/style_photo_options_dialog_btn"
            android:text="@string/photo_option_take_new_photo" />

        <Button
            android:id="@+id/btn_photo_option_choose_photo"
            style="@style/style_photo_options_dialog_btn"
            android:layout_marginTop="@dimen/photo_options_button_padding"
            android:text="@string/photo_option_choose_photo" />

        <Button
            android:id="@+id/btn_photo_option_remove_photo"
            style="@style/style_photo_options_dialog_btn"
            android:layout_marginTop="@dimen/photo_options_button_padding"
            android:text="@string/photo_option_remove_photo" />

        <Button
            android:id="@+id/btn_photo_option_cancel"
            style="@style/style_photo_options_dialog_btn"
            android:layout_marginTop="@dimen/photo_options_button_padding"
            android:text="@string/photo_option_cancel" />
    </LinearLayout>

</RelativeLayout>